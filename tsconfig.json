{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM","ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",             // ‚Üê change from "./src" to "."
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "prisma.config.ts"]
}
